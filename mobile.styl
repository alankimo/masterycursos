@import 'vars.styl'
/*--------------------------------------------------------------------------------------------------- Generales*/
body
	font-family raleway
	:hover
		text-decoration none
.info
	a
		padding 4px 22px
		background-color amarillo
		border-radius(10px)
		display inline-block
		border-bottom 3px solid naranja
		color #000
		transition(.2s)
	
		&:hover
			text-decoration none
			background-color naranja
.infolarge
	a
		padding 4px 20px
		background-color amarillo
		border-radius(10px)
		display inline-block
		border-bottom 3px solid naranja
		color #000
		transition(.2s)
		&:hover
			text-decoration none
			background-color naranja
	
/*--------------------------------------------------------------------------------------------------- Header*/
header
	width 100%
	box-shadow(0 3px 50px 2px rgba(0,0,0,.8))
	z-index 1
	position relative
	.logo
		width 225px
		margin 0 auto
		img
			width 100%
	
	nav
		ul
			margin-top 9px
			width 100%
			li
				list-style none
				font-size 1.2em
				padding 0 8px
				a
					color #000
					transition(.1s)
					&:hover
						text-decoration none
						color naranja
		
	.iconos
